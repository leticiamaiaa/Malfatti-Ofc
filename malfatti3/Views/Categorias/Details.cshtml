@model malfatti.Models.Categoria

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/App_Themes/Categoria/Details.css" />
    <link rel="stylesheet" type="text/css" href="details1.css" />
    <title>Malfatti</title>
</head>
<body>
    @using (Html.BeginForm("Details", "Categorias", FormMethod.Post))
    
    {
    <main>
        @Html.AntiForgeryToken()
        <div>

            <h2>Visualizando detalhes de uma CATEGORIA</h2>
            <h3>Nome:</h3>
            @Html.DisplayNameFor(model => model.Nome)
            <div class="panel-footer panel-info">
                @Html.ActionLink("Alterar", "Edit", new { id = Model.CategoriaId },
                     new { @class = "btn btn-info" })
                @Html.ActionLink("Retornar para a listagem", "Index", null,
                     new { @class = "btn btn-info" })
            </div>
        </div>
    </main>
    }
</body>
</html>