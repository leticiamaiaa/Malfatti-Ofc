<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link rel="shortcut icon" href="~/Imagens/logo-malfatti.png" type="image/x-icon">
    <link rel="stylesheet" type="text/css" href="~/App_Themes/Tema1/Menu.css" />
    @RenderSection("styles", false)
    <style>

    </style>
</head>
<body>
    <header>
        <img src="~/Imagens/logo.png" alt="logo">
        <nav>
            <ul>
                <li>
                    @Html.ActionLink("Página Inicial", "Index", "Home")
            </li>
            <li>
                @Html.ActionLink("Categorias", "Index", "Categorias")
            </li>
            <li>
                @Html.ActionLink("Fabricantes", "Index", "Fabricantes")
            </li>
            <li>
                @Html.ActionLink("Produtos", "Index", "Produto")
            </li>
        </ul>
        @Html.Partial("_LoginPartial")
            <div id="PopUpCart">
            <div id="header-cart">
                <a href="javascript:abrir('PopUpCart')">
                    <img src="./image/back-white.png" alt="" id="cartback">
                </a>
                <h3>Minha cesta</h3>
                <div id="cart-img">
                    <img src="./image/cart.svg" alt="">
                    <div id="cart-indicator">
                        <div>
                            <p>1</p>
                        </div>

                    </div>
                </div>
            </div>

            <div id="body-cart">
                <div class="container-product-cart">
                    <div class="content-cart">
                        <h2>ARGOLA DOURADA COM PÉROLA</h2>
                        <div class="internal-content1">
                            <div class="itens-cart">
                                <p>Preço: </p>
                                <p>R$ 89,90</p>
                            </div>
                            <div class="itens-cart">
                                <p>Quantidade: </p>
                                <p>1</p>
                            </div>
                        </div>
                        <div class="itens-cart">
                            <p>Código do produto: </p>
                            <p>0112352</p>
                        </div>
                    </div>
                </div>
            </div>
            <div id="footer-cart">
                <a href="">Finalizar pedido</a>
            </div>
        </div>
    </nav>
</header>
<div>
    <br />
    @RenderBody()
</div>
<script src="@Url.Content("~/Scripts/jquery.validate.js")"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")"></script>
<script src="@Url.Content("~/scripts/jquery-1.10.2.js")"></script>
<script src="@Url.Content("~/scripts/bootstrap.js")"></script>
@RenderSection("ScriptPage", false);
</body>
</html>
